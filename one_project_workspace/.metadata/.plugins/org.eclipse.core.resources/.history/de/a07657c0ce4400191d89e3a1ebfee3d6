package com.taotao.rest.dao;

import org.springframework.beans.factory.annotation.Autowired;

import redis.clients.jedis.Jedis;
import redis.clients.jedis.JedisPool;

public class JedisClientSingle  implements JedisClient{

	@Autowired
	private JedisPool jedisPool;
	@Override
	public String get(String key) {
		try {
			Jedis resource = jedisPool.getResource();
			String string = resource.get(key);
			return string;
		} catch (Exception e) {
			e.printStackTrace();
			return null;
		}
	}

	@Override
	public String set(String key, String value) {
		try {
			Jedis resource = jedisPool.getResource();
			String string = resource.set(key, value);
			return string;
		} catch (Exception e) {
			e.printStackTrace();
			return null;
		}
	}

	@Override
	public String hget(String hkey, String key) {
		try {
			Jedis resource = jedisPool.getResource();
			String string = resource.hget(hkey, key);
			return string;
		} catch (Exception e) {
			e.printStackTrace();
			return null;
		}
	}

	@Override
	public String hset(String hkey, String key, String value) {
		try {
			Jedis resource = jedisPool.getResource();
			Long string = resource.hset(hkey, key, value);
			return string.toString();
		} catch (Exception e) {
			e.printStackTrace();
			return null;
		}
	}

	@Override
	public Long incr(String key) {
		try {
			Jedis resource = jedisPool.getResource();
			Long string = resource.incr(key);
			return string;
		} catch (Exception e) {
			e.printStackTrace();
			return null;
		}
	}

	@Override
	public long expire(String key, int second) {
		try {
			Jedis resource = jedisPool.getResource();
			Long string = resource.expire(key, second);
			return string.toString();
		} catch (Exception e) {
			e.printStackTrace();
			return null;
		}
	}

	@Override
	public long ttl(String key) {
		// TODO Auto-generated method stub
		return 0;
	}

}
