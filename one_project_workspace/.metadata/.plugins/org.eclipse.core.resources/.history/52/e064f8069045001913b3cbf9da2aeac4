package com.taotao.rest.dao;

import org.springframework.beans.factory.annotation.Autowired;

import redis.clients.jedis.JedisCluster;

public class JedisClientCluster implements JedisClient{

	@Autowired
	private JedisCluster jedisCluster;
	@Override
	public String get(String key) {
		// TODO Auto-generated method stub
		try {
			String string = jedisCluster.get(key);
			return string;
		} catch (Exception e) {
			// TODO: handle exception
			return null;
		}
	}

	@Override
	public String set(String key, String value) {
		try {
			String string = jedisCluster.set(key, value);
			return string;
		} catch (Exception e) {
			// TODO: handle exception
			return null;
		}}

	@Override
	public String hget(String hkey, String key) {
		try {
			String string = jedisCluster.hget(hkey, key);
			return string;
		} catch (Exception e) {
			// TODO: handle exception
			return null;
		}
	}

	@Override
	public Long hset(String hkey, String key, String value) {
		try {
			Long string = jedisCluster.hset(hkey, key, value);
			return string;
		} catch (Exception e) {
			// TODO: handle exception
			return null;
		}
	}

	@Override
	public Long incr(String key) {
		// TODO Auto-generated method stub
		try {
			Long string = jedisCluster.incr(key);
			return string;
		} catch (Exception e) {
			// TODO: handle exception
			return null;
		}
	}

	@Override
	public Long expire(String key, int second) {
		try {
			Long string = jedisCluster.expire(key, second);
			return string;
		} catch (Exception e) {
			// TODO: handle exception
			return null;
		}
	}

	@Override
	public Long ttl(String key) {
		try {
			Long string = jedisCluster.ttl(key);
			return string;
		} catch (Exception e) {
			// TODO: handle exception
			return null;
		}
	}

}
